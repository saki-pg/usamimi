<%= form_with(model: @question) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


    <div class="field mb-3 w-100 row ml-0 mr-0">
      <%= form.label :title, 'タイトル' %>
      <%= form.text_field :title, class:"col-8 form-control" %>
    </div>

    <div class="field mb-3 w-100 row ml-0 mr-0">
      <%= form.label :body, '内容' %>
      <%= form.text_area :body, class:"col-8 form-control" %>
    </div>

    <div class="field mb-3 w-100 row ml-0 mr-0">
      <%= form.label :image, '画像' %>
      <%= form.file_field :image, class:"col-8 form-control" %>
    </div>

    <div class="form-group my-3">
      <label class="mb-2">タグ</label>
      <% @tags.each do |t| %>
        <div class="form-check">
          <%= check_box_tag "question[tag_ids][]", t.id, @question.tags.include?(t), class: "form-check-input" %>
          <%= label_tag "question[tag_ids][]", t.name, class: "form-check-label" %>
        </div>
      <% end %>
    </div>


    <div class="actions">
      <%= form.submit '投稿', class: 'btn btn-success'  %>
    </div>
<% end %>

