<div class="container p-5">
  <div class="dvise_frame" style="max-width: 500px; margin: 0 auto;">
    <h2 class="text-center mb-5">新しいアカウントを作成</h2>
    <div class="devise_inner" >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-3 w-100 row ml-0 mr-0">
          <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder:"ユーザー名",class:"col-10 form-control" %>
        </div>

        <div class="field mb-3 w-100 row ml-0 mr-0">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス",class:"col-10 form-control"%>
        </div>

        <div class="field mb-3 w-100 row ml-0 mr-0">
          <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワード",class:"col-10 form-control"%>
        </div>

        <div class="field mb-3 w-100 row ml-0 mr-0">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード確認",class:"col-10 form-control"%>
        </div>

        <div class="actions mb-1 w-100 row ml-0 mr-0" >
          <%= f.submit "新しいアカウントを作成",class: "p-2 m-1 btn-outline-success text-white bg-success rounded col-12 form-control" %>
        </div>

        <div class="text-center" >
          <%= link_to "すでにアカウントをお持ちの方はログイン","/account",class:"text-success sign_in_link"%>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-4">
    <%= link_to '前のページに戻る', request.referer || root_path, class: "link-success me-3" %>
    <%= link_to "トップページ", root_path, class: "link-success me-3" %>
  </div>
</div>
