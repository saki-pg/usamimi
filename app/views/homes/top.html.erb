<div class="container justify-content-center">

  <div class="container justify-content-center">
    <div id="carouselExampleIndicators" class="carousel slide p-0" data-bs-ride="carousel" style="width: 100%; height: 600px;">
      <div class="carousel-inner">
        <div class="carousel-item active" style="background-image: url('<%= asset_url 'main.jpg' %>'); background-size: cover;"></div>
        <div class="carousel-item" style="background-image: url('<%= asset_url 'rabbit_2.png' %>'); background-size: cover;"></div>
        <div class="carousel-item" style="background-image: url('<%= asset_url 'logo.png' %>'); background-size: cover;"></div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </a>
    </div>
  </div>

  <div class="my-5 text-center">
    <h2>うさぎがいる生活</h2>
    <% if user_signed_in? %>
      <%= link_to "質問する", new_question_path, class: "btn btn-success btn-lg" %>
    <% else %>
      <%= link_to "ログインして質問する", new_user_session_path, class: "btn btn-success btn-lg" %>
    <% end %>
  </div>

  <%# タグ %>
  <div class="row text-center py-5">
    <% @tags.each do |tag| %>
      <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
        <%= link_to tagged_questions_path(tag_name: tag.name) do %>
          <div class="image-container">
            <%= image_tag "rabbit_2.png", class: "tag-img" %>
            <div class="overlay">
              <div class="text"><%= tag.name %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# 質問 %>
  <div class="row text-center">
    <% @questions.each do |question| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <%=image_tag "rabbit_2.png",class:"card-img-top" %>
          <div class="card-body">
            <h4 class="card-title"><%= question.title %></h4>
            <p class="card-text question-body"><%= question.body %></p>
          </div>
          <div class="card-footer">
            <%= link_to 'もっと見る', new_question_answer_path(question.id), class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
