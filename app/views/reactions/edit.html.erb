<div class="container">
  <div class="bg-light p-5 rounded my-4">
    <h2 class="col-12 ms-2">返信の編集</h2>
  </div>

  <%= form_with(model: @reaction) do |form| %>
    <% if @reaction.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@reaction.errors.count, "error") %> prohibited this reaction from being saved:</h2>
        <ul>
          <% @reaction.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container p-5">
      <div class="field mb-3 w-100 row ml-0 mr-0">
        <%= form.text_area :body, class:"col-8 form-control" %>
      </div>

      <div class="actions">
        <%= form.submit '投稿', class: 'btn btn-success'  %>
      </div>
    </div>
  <% end %>
  <div class="my-4">
    <%= link_to '現在の質問に戻る', question_path(@reaction.answer.question), class: "link-success me-3" %>
    <%= link_to '質問投稿一覧', questions_path, class: "link-success me-3" %>
  </div>
</div>
