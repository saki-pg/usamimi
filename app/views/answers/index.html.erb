<div class="container justify-content-center p-3">
  <div class="bg-light p-5 rounded my-4">
    <h2 class="col-12 ms-2">回答募集</h2>
  </div>

  <div class="my-3">
    <h5>現在回答募集中の質問一覧です</h5>
  </div>

  <!-- 追加: 質問の順序切替リンク -->
  <div class="d-flex justify-content-end mb-2">
    <%= link_to '新着順', { controller: 'answers', action: 'index', order: 'recent' }, remote: true, class: 'btn btn-light' %>
    <%= link_to '回答済み順', { controller: 'answers', action: 'index', order: 'answered' }, remote: true, class: 'btn btn-light' %>
  </div>

  <div class="row text-center">
    <% @questions.each do |question| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <%=image_tag "rabbit_2.png",class:"card-img-top" %>
          <div class="card-body">
            <h4 class="card-title"><%= question.title %></h4>
            <p class="card-text"><%= question.body %></p>
          </div>
          <div class="card-footer">
            <%= link_to '回答する', new_question_answer_path(question.id) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
